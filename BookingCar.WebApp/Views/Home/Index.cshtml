@model BookingCar.Core.Domain.ViewModels.LoginModel;

@section Header {
    <style>
        body {
             background-image: url('../lib/background.svg');
             background-size: 100% 100%
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
}


@section Nav {
    @if (!User.Identity.IsAuthenticated) {
          <form asp-antiforgery="true" asp-controller="Account"  asp-action="Login" data-ajax="true" data-ng-model="replace"
                                                             data-ajax-update="#response" method="post">
              <div class="validation" asp-validation-summary="ModelOnly"></div>
              <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                      <div class="modal-content">
                          <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">АВТОРИЗАЦИЯ</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                              </button>
                          </div>
                          <div class="modal-body">
                              <form class="px-4 py-3">
                                  <div class="form-group">
                                      <label for="exampleDropdownFormEmail1">Адрес почты</label>
                                      <input type="email" class="form-control" id="exampleDropdownFormEmail1" asp-for="Email" placeholder="введите почту, например email@mail.com">
                                      <span asp-validation-for="Email" />
                                  </div>
                                  <div class="form-group">
                                      <label for="exampleDropdownFormPassword1">Пароль</label>
                                      <input type="password" class="form-control" id="exampleDropdownFormPassword1" asp-for="Password" placeholder="введите пароль">
                                      <span asp-validation-for="Password" />
                                  </div>
                                  <div id="response"></div>
                              </form>
                          </div>
                      
                           <div class="modal-footer">
                               <button type="submit" class="btn btn-outline-primary">Войти</button>
                           </div>
                       </div>
                   </div
               </div>
           </form>
   }
}
   